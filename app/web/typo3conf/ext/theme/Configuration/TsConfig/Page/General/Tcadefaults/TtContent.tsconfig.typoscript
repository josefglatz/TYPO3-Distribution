TCAdefaults {
	tt_content {
		header_layout = 2
		imageborder = 0
		imagecols = 1
		sectionIndex = 0
	}
}

[applicationContext matches "/^Development/"] || [applicationContext matches '/^Production\\\\\\\\/Dev/'] || [applicationContext = Production/Staging, Production/Testing]
	TCAdefaults {
		tt_content {
			hidden = 0
		}
	}
[global]
