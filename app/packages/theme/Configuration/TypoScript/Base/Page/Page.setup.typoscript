################
### BODY TAG ###
################
	bodyTagCObject = COA
	bodyTagCObject {
		stdWrap.wrap = <body id="top"|>

		# attribute class
		10 =< lib.pageClass
		10.stdWrap.noTrimWrap = | class="|"|

		# attribute(s) data-*
		20 = COA
		20 {
			# Add page UID
			10 = TEXT
			10 {
				value = data-page-uid="{field:uid}"
				insertData = 1
				noTrimWrap = | ||
			}
		}
	}


######################
#### PAGE stdWrap ####
######################
	stdWrap.replacement {
		1 {
			search = ###SPACE###
			replace {
				char = 32
			}
		}
	}

}


