#### DEVELOPMENT ####
#####################
// @TODO refactor applicationContext condition if the TypoScript Condition Parser/Matcher is fixed in the core
[applicationContext matches "/^Development/" || applicationContext matches '/^Production\\\\\\\\/Dev/']
	page {
		bodyTagCObject {
			10 {
				# Add helper class for development specific applicationContext
				777 = TEXT
				777 {
					value = develop
					noTrimWrap = | ||
				}
			}
		}
	}
[applicationContext matches "/^Development/"]
	page {
		bodyTagCObject {
			10 {
				# Add helper class for local development specific applicationContext
				778 = TEXT
				778 {
					value = develop-local
					noTrimWrap = | ||
				}
			}
		}
	}
[global]



