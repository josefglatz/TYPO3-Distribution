# EditorConfig is awesome: http://EditorConfig.org

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2

[*.conf]
indent_size = 2

[*.rst]
indent_style = space
indent_size = 3
